<%-include partials/header.ejs%>
    <h1>home</h1>
    <p><%=startingContent%></p>
    
<%allPosts.forEach((post) => {%>
  <h2><%= post.title%></h2>
  <p><%= post.content.substring(0, 100) + "..." %> 
    <!-- .substring(0, 100) + "..." -->
    <a href="/posts/<%=post._id%>" type="submit" name="redirect">Read More</a>
  </p>
  
<%})%>

<form action="/compose">
    <button type="submit" class="btn btn-success">Compose</button>
</form>

